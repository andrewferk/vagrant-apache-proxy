<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  DocumentRoot <%= @params[:docroot] %>
  
  <Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>
  
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  LogLevel info
  ErrorLog <%= @params[:logroot] %>/<%= @params[:name] %>-error.log
  CustomLog <%= @params[:logroot] %>/<%= @params[:name] %>-access.log combined

</VirtualHost>
